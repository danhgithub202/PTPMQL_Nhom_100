@model DemoMVC.Models.Person

@{
    ViewData["Title"] = "Thêm Mới";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="row">
        <!-- PHẦN 1: UPLOAD EXCEL -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5>Import từ Excel</h5>
                </div>
                <div class="card-body">
                    @if (ViewData.ModelState.ContainsKey(""))
                    {
                        <div class="alert alert-danger">
                            @ViewData.ModelState[""].Errors.FirstOrDefault()?.ErrorMessage
                        </div>
                    }

                    <form asp-action="Upload" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">Chọn file Excel:</label>
                            <input type="file" name="file" class="form-control" accept=".xls,.xlsx" required />
                        </div>

                        <button type="submit" class="btn btn-success">Upload Excel</button>
                        <small class="text-muted d-block mt-2">
                            File cần có 3 cột: PersonId, FullName, Address
                        </small>
                    </form>

                    <!-- THÊM NÚT TẢI MẪU -->
                    <div class="mt-3">
                        <a asp-action="DownloadTemplate" class="btn btn-outline-info btn-sm">
                            Tải file mẫu (.xlsx)
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- PHẦN 2: NHẬP TAY -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5>Nhập tay</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="PersonId" class="form-label"></label>
                            <input asp-for="PersonId" class="form-control" />
                            <span asp-validation-for="PersonId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary">Tạo mới</button>
                            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}