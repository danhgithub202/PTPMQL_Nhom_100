@model DemoMVC.Models.Calculator

<h2>Máy tính đơn giản</h2>

<form method="post">
    <label>Số thứ nhất:</label>
    <input asp-for="Number1" required /><br/><br>

    <label>Số thứ hai:</label>
    <input asp-for="Number2" required /><br/><br>

    <label>Phép tính:</label>
    <select asp-for="Operation" required>
        <option value="">--Chọn phép tính--</option>
        <option value="Add">Tổng</option>
        <option value="Subtract">Hiệu</option>
        <option value="Multiply">Tích</option>
        <option value="Divide">Thương</option>
    </select><br/><br>

    <button type="submit">Tính</button>
</form>

@if (ViewBag.Result != null)
{
    <p>Kết quả: @Model.Number1 
       @(Model.Operation == "Add" ? "+" : Model.Operation == "Subtract" ? "-" : Model.Operation == "Multiply" ? "*" : "/") 
       @Model.Number2 = @ViewBag.Result</p>
}

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
