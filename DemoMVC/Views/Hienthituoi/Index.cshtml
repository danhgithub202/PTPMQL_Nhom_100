@model DemoMVC.Models.Person

<h2>Nhập thông tin người</h2>

<form method="post">
    <label>Họ tên:</label>
    <input asp-for="Fullname" required /><br/><br>

    <label>Năm sinh:</label>
    <input asp-for="BirthYear" required /><br/><br>

    <button type="submit">Tính tuổi</button>
</form>

@if (ViewBag.Age != null)
{
    <p>Họ tên: @Model.Fullname</p>
    <p>Tuổi: @ViewBag.Age</p>
}
